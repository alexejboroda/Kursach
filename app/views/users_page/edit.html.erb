


<%= form_for @user, url: users_page_path(@user) do |f| %>

  <div class="field">

    <%= f.text_field :email, autofocus: true, autocomplete: "email",class: "form-control",type:"text",placeholder: t("users.email") %>
  </div>

  
<br>

  <div class="field">
    Новый пароль :
    <%= f.password_field :password, autocomplete: "new-password" ,class: "form-control",type:"text"%>
    <% if @minimum_password_length %>
      <br />
      <em></em>
    <% end %>
  </div>
<hr>
  <div class="field">
  Текущий пароль :
    <%= f.password_field :password_confirmation, autocomplete: "current-password",class: "form-control",type:"text" %>
  </div>
  <br>
  <div class="field">
  Подтвердите пароль :
    <%= f.password_field :current_password, autocomplete: "current-password" ,class: "form-control",type:"text" %>
  </div>
  <br>
<div class="btn-group" role="group" aria-label="Basic example">
  <div class="actions">
    <%= f.submit%>
  </div>
       
       
</div>
 
<% end %>


